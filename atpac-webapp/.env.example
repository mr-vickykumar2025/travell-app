# Copy to .env and fill values
PORT=3000
MONGO_URI=mongodb://127.0.0.1:27017/atpac
JWT_SECRET=replace_this_with_a_strong_secret
# Optional: SMTP settings for real email delivery. If you omit them, Ethereal (test SMTP) will be used and a preview URL will be printed to server console.
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-smtp-user
EMAIL_PASS=your-smtp-pass
EMAIL_FROM="ATPAC <no-reply@atpac.gov.in>"
